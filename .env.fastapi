# Configuration IAPosteManager v4.0 - FastAPI + Ollama

# Application
APP_NAME=IAPosteManager
APP_VERSION=4.0.0
DEBUG=True

# API
API_PREFIX=/api
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://localhost:8000"]

# Database
DATABASE_URL=sqlite:///./iapostemanager.db

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL_LLM=llama3
OLLAMA_MODEL_WHISPER=whisper
OLLAMA_MODEL_EMBED=nomic-embed-text

# JWT Authentication
SECRET_KEY=your-secret-key-change-in-production-iapostemanager-2025
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration
EMAIL_DOMAIN=tonapp.ai
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# File Storage
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760

# MCP Configuration
MCP_SERVERS_DIR=mcp_servers
