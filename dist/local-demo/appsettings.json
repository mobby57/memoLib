{
  "ConnectionStrings": {
    "Default": "Data Source=memolib.db"
  },
  "JwtSettings": {
    "Issuer": "memolib",
    "Audience": "memolib-users",
    "ExpirationMinutes": 60,
    "RefreshExpirationDays": 7
  },
  "EmailMonitor": {
    "Enabled": true,
    "ImapHost": "imap.gmail.com",
    "ImapPort": 993,
    "Username": "PLACEHOLDER_EMAIL",
    "IntervalSeconds": 60,
    "BatchSize": 50,
    "Whitelist": [],
    "Blacklist": [
      "noreply@",
      "no-reply@",
      "newsletter@",
      "notifications@",
      "marketing@",
      "promo@",
      "spam@",
      "unsubscribe@",
      "mailer@",
      "bounce@"
    ]
  },
  "PublicContact": {
    "ToEmail": "PLACEHOLDER_EMAIL",
    "FromEmail": "PLACEHOLDER_EMAIL",
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "UseSslOnConnect": false
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "localhost;127.0.0.1;memolib.local"
}
