# ===========================================
# MemoLib - Environment Variables Template
# ===========================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to git!

# ===========================================
# DATABASE
# ===========================================
# PostgreSQL (Production)
DATABASE_URL="postgresql://user:password@localhost:5432/memolib?schema=public"

# SQLite (Development - alternative)
# DATABASE_URL="file:./prisma/dev.db"

# ===========================================
# NEXTAUTH
# ===========================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# ===========================================
# OAUTH PROVIDERS
# ===========================================
# GitHub OAuth
GITHUB_ID="your-github-oauth-app-id"
GITHUB_SECRET="your-github-oauth-app-secret"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ===========================================
# STRIPE (Payments)
# ===========================================
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Stripe Price IDs
STRIPE_PRICE_ID_STARTER="price_..."
STRIPE_PRICE_ID_PRO="price_..."
STRIPE_PRICE_ID_ENTERPRISE="price_..."

# ===========================================
# EMAIL SERVICE
# ===========================================
# SendGrid
SENDGRID_API_KEY="SG...."
SENDGRID_FROM_EMAIL="noreply@memolib.com"

# Gmail API (for email monitoring)
GMAIL_CLIENT_ID="your-gmail-client-id"
GMAIL_CLIENT_SECRET="your-gmail-client-secret"
GMAIL_REFRESH_TOKEN="your-refresh-token"

# ===========================================
# STORAGE
# ===========================================
# Vercel Blob
BLOB_READ_WRITE_TOKEN="vercel_blob_..."

# Azure Storage (alternative)
# AZURE_STORAGE_CONNECTION_STRING="DefaultEndpointsProtocol=https;..."
# AZURE_STORAGE_CONTAINER_NAME="memolib-uploads"

# ===========================================
# CACHE & RATE LIMITING
# ===========================================
# Upstash Redis
UPSTASH_REDIS_REST_URL="https://..."
UPSTASH_REDIS_REST_TOKEN="..."

# ===========================================
# MONITORING
# ===========================================
# Sentry
SENTRY_DSN="https://...@sentry.io/..."
SENTRY_AUTH_TOKEN="sntrys_..."
SENTRY_ORG="your-org"
SENTRY_PROJECT="memolib"

# ===========================================
# AI SERVICES
# ===========================================
# OpenAI
OPENAI_API_KEY="sk-..."

# Ollama (local AI - optional)
OLLAMA_BASE_URL="http://localhost:11434"

# ===========================================
# LEGAL INTEGRATIONS
# ===========================================
# LÃ©gifrance API
LEGIFRANCE_CLIENT_ID="your-client-id"
LEGIFRANCE_CLIENT_SECRET="your-client-secret"

# ===========================================
# GITHUB APP (for integrations)
# ===========================================
GITHUB_APP_ID="123456"
GITHUB_APP_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----"
GITHUB_APP_WEBHOOK_SECRET="your-webhook-secret"

# ===========================================
# SECURITY
# ===========================================
# Encryption key for sensitive data
ENCRYPTION_KEY="generate-with-openssl-rand-hex-32"

# JWT Secret
JWT_SECRET="generate-with-openssl-rand-base64-32"

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_AI_FEATURES="true"
ENABLE_EMAIL_MONITORING="true"
ENABLE_BILLING="true"
ENABLE_ANALYTICS="true"

# ===========================================
# DEVELOPMENT
# ===========================================
NODE_ENV="development"
NEXT_TELEMETRY_DISABLED="1"

# Debug
DEBUG="false"
LOG_LEVEL="info"

# ===========================================
# PRODUCTION ONLY
# ===========================================
# VERCEL_URL (auto-set by Vercel)
# VERCEL_ENV (auto-set by Vercel)

# Azure Static Web Apps
# AZURE_STATIC_WEB_APPS="true"

# ===========================================
# NOTES
# ===========================================
# 1. Generate secrets with: openssl rand -base64 32
# 2. Never commit this file with real values
# 3. Use environment-specific files: .env.development, .env.production
# 4. For production, use platform secrets (Vercel, Azure, etc.)
