# ===== APPLICATION NEXT.JS (FRONTEND) =====
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=IAPosteManager
NEXT_PUBLIC_API_URL=http://localhost:5000
NODE_ENV=development

# Authentification Next.js
# G√©n√©rer avec: openssl rand -base64 32
NEXTAUTH_SECRET=votre-secret-genere-ici
NEXTAUTH_URL=http://localhost:3000

# ===== FLASK / PYTHON (BACKEND) =====
FLASK_ENV=development
FLASK_APP=app.py
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database Configuration (PostgreSQL for production)
# DATABASE_URL=postgresql://username:password@hostname:5432/database_name
# Leave empty for SQLite in development
DATABASE_URL=sqlite:///iapostemanager.db

# Server Configuration
HOST=0.0.0.0
PORT=5000

# ===== AZURE (DEV UNIQUEMENT) =====
# ‚ö†Ô∏è Utiliser des identifiants DEV, jamais PROD en local
AZURE_TENANT_ID=votre-tenant-id
AZURE_CLIENT_ID=votre-client-id
AZURE_CLIENT_SECRET=votre-client-secret

# Azure Key Vault (production)
# AZURE_KEYVAULT_URL=https://iapostemanager-kv.vault.azure.net/

# ===== SMTP EMAIL CONFIGURATION =====
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com

# Microsoft Graph (pour Outlook)
# MS_GRAPH_CLIENT_ID=
# MS_GRAPH_CLIENT_SECRET=
# MS_GRAPH_TENANT_ID=

# ===== TWILIO / WHATSAPP (DEV SANDBOX) =====
# ‚ö†Ô∏è Utiliser sandbox Twilio pour dev
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=votre-token-sandbox
TWILIO_PHONE_NUMBER=+15005550006
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
TWILIO_WEBHOOK_URL=http://localhost:3000/api/webhooks/twilio

# ===== IA / LLM CONFIGURATION =====
# AI_PROVIDER options: "openai" (payant) ou "llama" (GRATUIT local)
AI_PROVIDER=llama

# OpenAI Configuration (si AI_PROVIDER=openai)
# OPENAI_API_KEY=sk-your-openai-api-key-here
# OPENAI_WEBHOOK_SECRET=your-webhook-secret-from-openai

# Llama Local Configuration (si AI_PROVIDER=llama)
# OLLAMA_BASE_URL=http://localhost:11434
# LLAMA_MODEL=llama3.1:8b
# LLAMA_TIMEOUT=30

# Azure OpenAI (alternative)
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_KEY=
# AZURE_OPENAI_DEPLOYMENT=gpt-4

# ===== S√âCURIT√â =====
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true

# ===== LOGGING =====
LOG_LEVEL=DEBUG
LOG_FILE=logs/app.log

# ===== RATE LIMITING =====
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ===== MONITORING (OPTIONNEL) =====
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
# Application Insights (production)
# APPLICATIONINSIGHTS_CONNECTION_STRING=

# ===== PRODUCTION NOTES =====
# ‚ö†Ô∏è EN PRODUCTION, UTILISER:
