# Dockerfile optimisé pour Fly.io + Next.js 16
FROM node:20-slim AS base

RUN apt-get update && apt-get install -y openssl && rm -rf /var/lib/apt/lists/*

# Install dependencies only when needed
FROM base AS deps
WORKDIR /app

COPY package.json package-lock.json* ./
COPY prisma ./prisma/
RUN npm ci --legacy-peer-deps

# Rebuild the source code only when needed
FROM base AS builder
WORKDIR /app
COPY --from=deps /app/node_modules ./node_modules
COPY . .

ENV NEXT_TELEMETRY_DISABLED=1
ENV NODE_ENV=production
# Dummy env vars for build time
ENV STRIPE_SECRET_KEY="sk_dummy_build_key"
ENV DATABASE_URL="postgresql://dummy:dummy@localhost:5432/dummy"

# Next.js: éviter le conflit entre proxy.ts et middleware.ts
RUN rm -f src/middleware.ts

RUN npm run build

# Production image
FROM base AS runner
WORKDIR /app

ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1
ENV PORT=3000
ENV HOSTNAME="0.0.0.0"
ENV HOME="/tmp"
# Placeholder env vars to allow build - real values set in Fly secrets
ENV STRIPE_SECRET_KEY=""
ENV DATABASE_URL=""

RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

# Copy Prisma schema and migrations for production database operations
COPY --from=builder /app/prisma ./prisma
COPY --from=builder /app/package.json ./package.json

# Copy startup script with migrations
COPY start-with-migrations.js ./start-with-migrations.js

COPY --from=builder /app/public ./public
COPY --from=builder --chown=nextjs:nodejs /app/.next/standalone ./
COPY --from=builder --chown=nextjs:nodejs /app/.next/static ./.next/static

# Install Prisma CLI AFTER copying standalone (to avoid being overwritten)
# Must be done as root before switching to nextjs user  
RUN npm install prisma@5.22.0 --save-dev --legacy-peer-deps

# Create npm cache directory for nextjs user with correct permissions
RUN mkdir -p /tmp/.npm && chown -R nextjs:nodejs /tmp/.npm

USER nextjs

EXPOSE 3000

CMD ["node", "start-with-migrations.js"]
