{
  "version": "1.0.0",
  "name": "IAPosteManager",
  "description": "Plateforme d'automatisation email avec analyse documentaire IA",
  
  "cursor": {
    "ai": {
      "model": "claude-3.5-sonnet",
      "temperature": 0.7,
      "maxTokens": 4000
    },
    
    "rules": {
      "codeStyle": "ES6+ pour JS, PEP8 pour Python",
      "testing": "Obligatoire pour nouvelles features",
      "documentation": "JSDoc/docstrings requis",
      "security": "Validation stricte inputs, pas de secrets"
    },
    
    "shortcuts": {
      "tests": "npm run test && pytest",
      "dev": "npm run dev",
      "api": "python src/backend/api_document_analysis.py",
      "ollama": "ollama serve"
    },
    
    "filePatterns": {
      "react": "src/frontend/src/**/*.{jsx,tsx}",
      "python": "src/backend/**/*.py",
      "config": "*.{json,yaml,yml,env}",
      "docs": "*.md"
    },
    
    "ignorePaths": [
      "node_modules",
      ".git",
      "dist",
      "build",
      "__pycache__",
      "*.pyc",
      ".env",
      ".env.local"
    ]
  },
  
  "tasks": [
    {
      "id": "fix-errors",
      "title": "Corriger erreurs frontend",
      "priority": "critical",
      "files": [
        "src/frontend/src/App.jsx",
        "src/frontend/src/pages/EmailComposer.jsx"
      ]
    },
    {
      "id": "complete-api",
      "title": "Finaliser API analyse documentaire",
      "priority": "high",
      "files": [
        "src/backend/api_document_analysis.py",
        "src/backend/services/document_analyzer.py"
      ]
    },
    {
      "id": "tests",
      "title": "Créer suite tests complète",
      "priority": "high",
      "files": [
        "src/frontend/src/**/*.test.jsx",
        "src/backend/tests/**/*.py"
      ]
    },
    {
      "id": "deploy",
      "title": "Préparer déploiement production",
      "priority": "medium",
      "files": [
        "docker-compose.yml",
        "Dockerfile",
        ".github/workflows/deploy.yml"
      ]
    }
  ],
  
  "prompts": {
    "fixErrors": "@workspace Corriger toutes les erreurs de compilation et d'import",
    "createComponent": "Créer composant React {name} avec PropTypes et tests",
    "apiEndpoint": "Créer endpoint FastAPI {method} {path} avec validation Pydantic",
    "tests": "Générer tests unitaires complets pour ce fichier",
    "refactor": "Refactoriser ce code : extraire fonctions, typer, commenter",
    "optimize": "Optimiser performance de ce code",
    "security": "Analyser failles sécurité et proposer corrections"
  }
}
