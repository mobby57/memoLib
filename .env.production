# ============================================
# CONFIGURATION PRODUCTION - iaPosteManager
# ============================================
# ⚠️ IMPORTANT: Changez TOUTES les valeurs par défaut !

# Flask Configuration
SECRET_KEY=CHANGE-THIS-TO-A-STRONG-RANDOM-KEY-IN-PRODUCTION
FLASK_ENV=production
DEBUG=False

# Database
DATABASE_URL=sqlite:///data/production.db

# Security
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
CORS_ORIGINS=https://votre-domaine.com

# Email Configuration (si utilisé)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-here

# Rate Limiting & Performance
CACHE_TTL=600
MAX_EMAIL_LIMIT=500
RATE_LIMIT_PER_MINUTE=60
REQUEST_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/production.log

# AI Services (OpenAI)
OPENAI_API_KEY=your-openai-api-key-here
AI_MODEL=gpt-4
AI_MAX_TOKENS=2000

# Accessibility Features
ENABLE_TTS=True
ENABLE_TRANSCRIPTION=True
ENABLE_VOICE_DICTATION=True

# Frontend URL
FRONTEND_URL=http://localhost:5000

# Application Limits
MAX_FILE_UPLOAD_SIZE=10485760
MAX_TEMPLATES=100
MAX_RECIPIENTS_PER_EMAIL=100