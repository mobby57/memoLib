# Configuration du MVP IA Poste Manager
# ======================================

# API Configuration
API_PORT=5000
API_HOST=0.0.0.0
API_WORKERS=4

# Dashboard
DASHBOARD_PORT=8080

# Features
ENABLE_MULTI_CHANNEL=true
ENABLE_EXTERNAL_AI=false  # true si OPENAI_API_KEY est configurée
ENABLE_SMS=false  # Nécessite Twilio
ENABLE_WHATSAPP=false  # Nécessite WhatsApp Business API

# Performance
MAX_CONCURRENT_WORKSPACES=100
WORKSPACE_TTL_HOURS=24
CACHE_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/mvp.log
AUDIT_TRAIL_ENABLED=true

# Security (Already configured in .env)
# Les clés de sécurité sont dans .env
# Ne PAS dupliquer ici

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 heure

# Channels
DEFAULT_CHANNEL=email
SUPPORTED_CHANNELS=email,chat,sms,whatsapp,web_form,api

# Workspace
DEFAULT_WORKSPACE_TYPE=general
DEFAULT_LANGUAGE=fr
DEFAULT_ACCESSIBILITY_MODE=none

# Form Generator
MAX_FORM_FIELDS=50
FORM_VALIDATION_STRICT=true

# Response Generator
DEFAULT_TONE=professional
MAX_RESPONSE_LENGTH=5000

# External Services (Optionnel)
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_PHONE_NUMBER=
# WHATSAPP_BUSINESS_TOKEN=
