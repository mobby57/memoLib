{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debugpy Old: Current File",
      "type": "debugpy-old",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Debugpy Old: Current File",
      "type": "debugpy-old",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Attach to Chrome",
      "port": 9222,
      "request": "attach",
      "type": "chrome",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Containers .NET Attach (Preview)",
      "type": "docker",
      "request": "attach",
      "platform": "netCore",
      "sourceFileMap": {
        "/src": "${workspaceFolder}"
      }
    },
    // ===== VITE / FRONTEND =====
    {
      "name": "Vite: Dev Server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/src/frontend",
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "Local:\\s+(https?://localhost:\\d+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      },
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Vite: Debug with Chrome",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev", "--", "--debug"],
      "cwd": "${workspaceFolder}/src/frontend",
      "console": "integratedTerminal",
      "env": {
        "NODE_OPTIONS": "--inspect"
      }
    },

    // ===== PYTHON / BACKEND =====
    {
      "name": "Python: Flask API",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "args": ["run", "--debug", "--port", "5000"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "FLASK_APP": "app.py",
        "FLASK_ENV": "development",
        "PYTHONPATH": "${workspaceFolder}"
      },
      "jinja": true
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Python: Tests (pytest)",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-v", "--tb=short"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },

    // ===== DOCKER =====
    {
      "name": "Docker: Node.js Backend",
      "type": "docker",
      "request": "launch",
      "preLaunchTask": "docker-run: debug",
      "platform": "node",
      "node": {
        "package": "${workspaceFolder}/src/backend/package.json",
        "localRoot": "${workspaceFolder}/src/backend"
      }
    },

    // ===== CHROME / BROWSER =====
    {
      "name": "Chrome: Attach",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}/src/frontend"
    }
  ],
  "compounds": [
    {
      "name": "Full Stack: Frontend + Backend",
      "configurations": ["Vite: Dev Server", "Python: Flask API"],
      "stopAll": true
    }
  ]
}
