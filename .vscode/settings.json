{
  // =============================================================================
  // üß≠ CHA√éNE DE RESPONSABILIT√â MEMOLIB
  // =============================================================================
  // Ordre de priorit√© des actions de code:
  // 1Ô∏è‚É£ ESLint         ‚Üí Source de v√©rit√© syntaxique
  // 2Ô∏è‚É£ TypeScript     ‚Üí Typage strict et analyse statique
  // 3Ô∏è‚É£ Tailwind       ‚Üí UI/CSS uniquement (pas de logique)
  // 4Ô∏è‚É£ IntelliCode    ‚Üí Statistiques (ordre suggestions)
  // 5Ô∏è‚É£ Copilot        ‚Üí Assistant conversationnel contr√¥l√©
  // 6Ô∏è‚É£ Amazon Q       ‚Üí Expert infrastructure/cloud uniquement
  //
  // Documentation: .vscode/SETUP_GUIDE.md
  // Secteurs: Juridique, M√©dical, Administratif ‚Üí RGPD strict
  // =============================================================================

  // =============================================================================
  // üìù √âDITEUR G√âN√âRAL
  // =============================================================================
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.rulers": [100, 120],
  "editor.wordWrap": "wordWrapColumn",
  "editor.minimap.enabled": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.quickSuggestions": {
    "strings": true
  },

  // =============================================================================
  // 1Ô∏è‚É£ ESLINT - SOURCE DE V√âRIT√â
  // =============================================================================
  "eslint.enable": true,
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  "eslint.workingDirectories": [{ "directory": "./src/frontend", "changeProcessCWD": true }],
  "eslint.codeActionsOnSave.mode": "all",
  "eslint.lintTask.enable": true,
  "eslint.run": "onType",

  // =============================================================================
  // 2Ô∏è‚É£ TYPESCRIPT & JAVASCRIPT - TYPAGE STRICT
  // =============================================================================
  "typescript.tsdk": "src/frontend/node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.tsserver.maxTsServerMemory": 4096,
  "typescript.tsserver.experimental.enableProjectDiagnostics": false,
  "typescript.tsserver.watchOptions": {
    "watchFile": "priorityPollingInterval",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority"
  },
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.suggest.completeFunctionCalls": true,
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.variableTypes.enabled": true,
  "javascript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "typescript.suggest.paths": false,
  "javascript.suggest.paths": false,
  "path-intellisense.mappings": {
    "@": "${workspaceFolder}/src",
    "@front": "${workspaceFolder}/src/frontend"
  },

  // =============================================================================
  // 3Ô∏è‚É£ TAILWIND CSS - UI UNIQUEMENT
  // =============================================================================
  "tailwindCSS.validate": true,
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  "css.validate": false,

  // =============================================================================
  // 4Ô∏è‚É£ INTELLICODE - STATISTIQUES UNIQUEMENT
  // =============================================================================
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  // =============================================================================
  // 5Ô∏è‚É£ GITHUB COPILOT - ASSISTANT CONTR√îL√â
  // =============================================================================
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true
  },
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.chat.localeOverride": "fr",

  // ‚ö†Ô∏è ZONES SENSIBLES - COPILOT D√âSACTIV√â
  // Secteurs r√©glement√©s: juridique, m√©dical, RGPD strict
  "github.copilot.chat.excludeGlobs": [
    // Migrations DB (tra√ßabilit√© l√©gale)
    "**/prisma/migrations/**",

    // Services m√©tier critiques
    "**/src/lib/services/legal-proof.service.ts",
    "**/src/lib/services/event-log.service.ts",
    "**/src/lib/services/rgpd-compliance.service.ts",
    "**/src/lib/services/signature-electronic.service.ts",

    // S√©curit√© & Secrets
    "**/.env*",
    "**/secrets/**",
    "**/config/security/**",
    "**/config/auth/**",

    // RGPD & Conformit√©
    "**/src/lib/rgpd/**",
    "**/docs/legal/**",
    "**/compliance/**",

    // Configuration sensible
    "**/azure-ad/**",
    "**/prisma/schema.prisma"
  ],

  // =============================================================================
  // 6Ô∏è‚É£ AMAZON Q - INFRASTRUCTURE UNIQUEMENT
  // =============================================================================
  // Utiliser Amazon Q uniquement pour:
  // - /infrastructure, /terraform, /aws
  // - Fichiers .tf, .tfvars
  // - Documentation cloud
  // JAMAIS pour logique m√©tier, EventLog, LegalProof

  // =============================================================================
  // üé® PRETTIER - FORMATAGE
  // =============================================================================
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // =============================================================================
  // üêç PYTHON (BACKEND FLASK)
  // =============================================================================
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python.exe",
  "python.terminal.activateEnvironment": true,
  "python.envFile": "${workspaceFolder}/.env",
  "python.terminal.useEnvFile": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "python.analysis.typeCheckingMode": "basic",

  // =============================================================================
  // üìÅ FICHIERS & ASSOCIATIONS
  // =============================================================================
  "files.exclude": {
    "**/dist": true,
    "**/node_modules": true,
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.pytest_cache": true,
    "**/venv": true,
    "**/.venv": true,
    "**/.git": false,
    "**/coverage": true,
    "**/.nyc_output": true
  },
  "files.associations": {
    "*.css": "tailwindcss",
    ".env*": "dotenv",
    ".env.local": "dotenv",
    ".env.production": "dotenv",
    "*.prisma": "prisma",
    "docker-compose*.yml": "dockercompose"
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,

  // =============================================================================
  // üîç RECHERCHE
  // =============================================================================
  "search.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/dist": true,
    "**/build": true,
    "**/.git": true,
    "**/coverage": true,
    "**/venv": true,
    "**/__pycache__": true
  },

  // =============================================================================
  // üíª TERMINAL
  // =============================================================================
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.env.linux": {
    "NODE_ENV": "development"
  },

  // =============================================================================
  // üîó GIT
  // =============================================================================
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,

  // =============================================================================
  // ‚ö° PERFORMANCE & WATCHERS
  // =============================================================================
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/venv/**": true,
    "**/.git/objects/**": true,
    "**/coverage/**": true,
    "**/.next/**": true,
    "**/__mocks__/**": true,
    "**/.turbo/**": true,
    "**/.vercel/**": true
  },

  // =============================================================================
  // üêã DOCKER
  // =============================================================================
  "docker.showStartPage": false,
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-containers"
  },

  // =============================================================================
  // üîî BETTER COMMENTS - MARQUEURS RGPD/SECTEUR
  // =============================================================================
  "better-comments.tags": [
    {
      "tag": "LEGAL",
      "color": "#D4AF37",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": true,
      "italic": false
    },
    {
      "tag": "RGPD",
      "color": "#FF6B6B",
      "strikethrough": false,
      "underline": true,
      "backgroundColor": "transparent",
      "bold": true,
      "italic": false
    },
    {
      "tag": "MEDICAL",
      "color": "#4ECDC4",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": true,
      "italic": false
    },
    {
      "tag": "AUDIT",
      "color": "#95E1D3",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": true,
      "italic": false
    }
  ],

  // =============================================================================
  // üîß AUTRES
  // =============================================================================
  "python-envs.pythonProjects": [
    {
      "path": "",
      "envManager": "ms-python.python:venv",
      "packageManager": "ms-python.python:pip"
    }
  ],
  "editor.codeActions.triggerOnFocusChange": true,
  "files.autoSave": "afterDelay"
}
