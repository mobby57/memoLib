{
  "deno.enable": false,
  "typescript.preferences.includePackageJsonAutoImports": "auto",
  "typescript.suggest.autoImports": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "files.exclude": {
    "**/.next": true,
    "**/node_modules": true
  },
  "tailwindCSS.experimental.classRegex": [
    ["class(?:Name)?\\s*[=:]\\s*['\"]([^'\"]*)['\"]", "([^'\"]*)"],
    ["(?:const|let|var)\\s+\\w+\\s*=\\s*['\"]([^'\"]*)['\"]"]
  ],
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript",
    "typescriptreact": "javascript"
  },
  "tailwindCSS.emmetCompletions": true,
  "sonarlint.pathToNodeExecutable": "${workspaceFolder}/node_modules/.bin/node",
  "chat.tools.terminal.autoApprove": {
    "/^git add src/components/LayoutWrapper\\.tsx src/app/layout\\.tsx; \\$env:SKIP=\"ggshield\"; git commit -m \"fix: Pages d'accueil et login en plein ecran sans sidebar\"; git push origin deploy/azure-swa-fix$/": {
      "approve": true,
      "matchCommandLine": true
    }
  }
}